{{!-- USER CLIENT--}}
<div id="Client" class="tabcontent">
  <div class="signup-container">
    <h2>Welcome! Sign Up here:</h2>
    <div class="tab">
      <button class="tablinks-first" onclick="openLogintwo(event, 'Client')">I'm a Client</button>
      <button class="tablinks" onclick="openLogin(event, 'Chef')">I'm a Chef</button>
    </div>
    <div class="signup-form-box-client">
      {{#if error}}
        <div class="error-message">{{ error }}</div>
      {{/if}}
      <form id="form" action="/signup-client" method="POST">
        <label for="email">Email</label>
        <input type="text" name="email" placeholder="hello@helloworld.com">
        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Insert a password">
        <button class="create-account-button" type="submit">Create Account</button>
      </form>
    </div>
  </div>
</div>

{{!-- USER CHEF --}}
<div id="Chef" class="tabcontent-two">
  <div class="signup-container">
    <h2>Welcome Chef! Sign Up here:</h2>
    <div class="tab">
      <button class="tablinks" onclick="openLoginTwo(event, 'Client')">I'm a Client</button>
      <button class="tablinks-second" onclick="openLogin(event, 'Chef')">I'm a Chef</button>
    </div>
    <div class="signup-form-box">
      {{#if error}}
        <div class="error-message">{{ error }}</div>
      {{/if}}
      <form id="form" action="/signup" method="POST">
        <div class="signup-form-label-input-container">
            <div class="signup-form-label-input-box">
              <label for="name">Name:</label>
              <input type="text" name="name" placeholder="Name">
            </div>
            <div class="signup-form-label-input-box">
              <label for="surname">Surname:</label>
              <input type="text" name="surname" placeholder="Surname">
            </div>
            <div class="signup-form-label-input-box">
              <label for="image">Profile Image:</label>
              <input type="text" name="image" placeholder="URL of your profile image">
            </div>
            <div class="signup-form-label-input-box">
              <label for="yearsOfExperience">Years of experience:</label>
              <input type="number" name="yearsOfExperience" min="0" max="60">
            </div>
            <div class="signup-form-label-input-box">
              <label for="languages">Languages that you speak:</label>
              <input type="text" name="languages" placeholder="Languages that you speak">
            </div>
            <div class="signup-form-label-input-box">
              <label for="email">Email:</label>
              <input type="text" name="email" placeholder="hello@helloworld.com">
            </div>
            <div class="signup-form-label-input-box">
              <label for="password">Password:</label>
              <input type="password" name="password" placeholder="Insert a password">
            </div>
        </div> 
        <button class="create-account-button" type="submit">Create Account</button>
      </form>
    </div>
  </div>
</div>

