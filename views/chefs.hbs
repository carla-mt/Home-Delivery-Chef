<div class="chefs-title">
	<h2>Chefs</h2>
</div>
<div class="chefs-container">
	{{#each chefs }}
		<div class="chef-box">
			<a href="/chefs/{{ this._id }}"><img class="chef-picture" src="{{ this.image }}" alt="picture of chef"></a>
			<p class="chef-name">{{ this.name }} {{ this.surname }}</p>
			<hr class="separator-chef-profile">
			<button class="see-more-chef-btn"><a href="/chefs/{{ this._id }}">Check Profile</a></button>
		</div>
	{{/each}}
</div>


